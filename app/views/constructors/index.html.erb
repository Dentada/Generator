<p id="notice"><%= notice %></p>

<h1>Listing Constructors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constructors.each do |constructor| %>
      <tr>
        <td><%= link_to 'Show', constructor %></td>
        <td><%= link_to 'Edit', edit_constructor_path(constructor) %></td>
        <td><%= link_to 'Destroy', constructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

